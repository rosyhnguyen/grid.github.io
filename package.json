{
  "name": "template",
  "version": "1.0.0",
  "description": "Project template",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "watch": "node-sass --watch --output-style compressed -o public/assets/css src/scss",
    "build": "node-sass --output-style compressed -o public/assets/css src/scss",
    "start": "lite-server --baseDir=\"public\""
  },
  "author": "Rosy Huong Nguyen",
  "private": true,
  "devDependencies": {
    "concurrently": "^4.1.2",
    "hamburgers": "^1.1.3",
    "lite-server": "^2.5.4",
    "node-sass": "^4.12.0"
  }
}
